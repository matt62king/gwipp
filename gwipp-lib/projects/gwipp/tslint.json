{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "lib",
      "gwipp",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "lib",
      "gwipp",
      "kebab-case"
    ],
    "only-arrow-functions": true,
    "prefer-readonly": true,
    "prefer-const": true,
    "newline-before-return": true,
    "no-empty": [true, "allow-empty-functions"]
  }
}
